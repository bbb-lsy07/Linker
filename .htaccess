# Linker 监控系统 - Apache 安全配置
# 保护敏感文件和目录，防止直接访问

# 阻止访问 .htaccess 和 .htpasswd 文件
<Files ~ "^\.ht">
    Require all denied
</Files>

# 阻止访问特定敏感文件
<FilesMatch "^(config\.php|db_update\.php|check_status\.php|prune_data\.php|update\.sh|README\.md|LICENSE)$">
    Require all denied
</FilesMatch>

# 阻止列出目录内容
Options -Indexes

# 阻止访问 data 和 includes 目录
RedirectMatch 403 ^/(data|includes)/.*$

# 阻止访问数据库文件
<FilesMatch "\.(db|sqlite|sqlite3)$">
    Require all denied
</FilesMatch>

# 阻止访问备份文件
<FilesMatch "\.(bak|backup|old|tmp)$">
    Require all denied
</FilesMatch>

# 阻止访问日志文件
<FilesMatch "\.(log|txt)$">
    Require all denied
</FilesMatch>

# 允许访问主要的入口文件
<Files "index.html">
    Require all granted
</Files>

<Files "api.php">
    Require all granted
</Files>

<Files "report.php">
    Require all granted
</Files>

# 允许访问 admin 目录下的入口文件
<Files "admin/index.php">
    Require all granted
</Files>

<Files "admin/dashboard.php">
    Require all granted
</Files>

# 设置默认字符集
AddDefaultCharset UTF-8

# 启用 GZIP 压缩（可选）
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# 设置缓存头（可选）
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
</IfModule>
